	"item": [
		{
			"name": "1. Crear Libro - Exitoso",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code es 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Respuesta contiene ID\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.environment.set(\"libroId\", jsonData.id);",
							"});",
							"",
							"pm.test(\"Datos del libro son correctos\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.titulo).to.eql(\"Cien Años de Soledad\");",
							"    pm.expect(jsonData.autor).to.eql(\"Gabriel García Márquez\");",
							"    pm.expect(jsonData.genero).to.eql(\"Realismo Mágico\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"titulo\": \"Cien Años de Soledad\",\n    \"autor\": \"Gabriel García Márquez\",\n    \"genero\": \"Realismo Mágico\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/libros",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"libros"
					]
				},
				"description": "Crea un nuevo libro con todos los datos válidos"
			},
			"response": []
		},
